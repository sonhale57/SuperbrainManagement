<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Superbrain Management Software</title>
    <link rel="shortcut icon" type="image/png" href="~/assets/images/logos/icon web.png" />
    <link rel="stylesheet" href="~/assets/css/styles.css" />
    //thự viện boostrap 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .hideof {
            display: none;
        }
    </style>
</head>
<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <aside class="left-sidebar">
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="javascript:void(0)" class="text-nowrap logo-img">
                        <img src="~/assets/images/logos/logo.png" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <nav class="sidebar-nav scroll-sidebar mt-2" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/." aria-expanded="false">
                                <span>
                                    <i class="ti ti-layout-dashboard"></i>
                                </span>
                                <span class="hide-menu">Tổng quan</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu text-success">Quản Lý</span>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(3)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-alert-circle"></i>
                                </span>
                                <span class="hide-menu">Chương trình</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(1)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-article"></i>
                                </span>
                                <span class="hide-menu">Lớp học</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(2)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-cards"></i>
                                </span>
                                <span class="hide-menu">Học viên</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-cards"></i>
                                </span>
                                <span class="hide-menu">Cuộc thi Toàn Quốc</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(4)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-file-description"></i>
                                </span>
                                <span class="hide-menu">Nhân sự</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(14)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-typography"></i>
                                </span>
                                <span class="hide-menu">Khóa đào tạo</span>
                            </a>
                        </li>

                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(6)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-typography"></i>
                                </span>
                                <span class="hide-menu">Quản lý kho</span>
                            </a>
                        </li>

                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(5)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-typography"></i>
                                </span>
                                <span class="hide-menu">Kế toán</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu text-primary">Người dùng</span>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(7)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-mood-happy"></i>
                                </span>
                                <span class="hide-menu">Thông báo</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(12)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-aperture"></i>
                                </span>
                                <span class="hide-menu">Email,SMS</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(8)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-aperture"></i>
                                </span>
                                <span class="hide-menu">Tài liệu</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(11)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-aperture"></i>
                                </span>
                                <span class="hide-menu">Cài đặt</span>
                            </a>
                        </li>

                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(10)">
                            <a class="sidebar-link" href="@Url.Action("Index", "Users")" aria-expanded="false">
                                <span>
                                    <i class="ti ti-aperture"></i>
                                </span>
                                <span class="hide-menu">Quản trị User</span>
                            </a>
                        </li>
                        <li class="sidebar-item @SuperbrainManagement.Controllers.CheckUsers.checkRole(9)">
                            <a class="sidebar-link" href="javascript:void(0)" aria-expanded="false">
                                <span>
                                    <i class="ti ti-aperture"></i>
                                </span>
                                <span class="hide-menu">Hệ thống cơ sở</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="body-wrapper">
            <header class="app-header shadow">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/Assets/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a href="/Authentication/Profile" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Hồ sơ cá nhân</p>
                                        </a>
                                        <a href="/Authentication/MyAccount" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-lock-access fs-6"></i>
                                            <p class="mb-0 fs-3">Thông tin tài khoản</p>
                                        </a>
                                        <hr />
                                        <a href="/Authentication/Logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <div class="container-fluid">
                @if (!SuperbrainManagement.Controllers.CheckUsers.checkcookielogin())
                {
                    Response.Redirect("/Authentication");
                }
                else
                {
                    @RenderBody()
                }

            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/signalR")
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/sidebarmenu.js" asp-append-version="true"></script>
    <script src="~/assets/js/app.min.js" asp-append-version="true"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.js" asp-append-version="true"></script>
    <script src="~/assets/js/dashboard.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
